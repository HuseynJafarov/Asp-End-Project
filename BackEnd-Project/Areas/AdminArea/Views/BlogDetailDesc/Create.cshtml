@model BlogDetailDesc

@{
    ViewData["Title"] = "Edit";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            BlogDetailDesc
                        </p>
                        <form asp-controller="BlogDetailDesc" asp-action="Create" enctype="multipart/form-data" class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="Desc1">Description-1</label>
                                <input maxlength="25" type="text" class="form-control" asp-for="Desc1">
                                <span class="text-danger my-1" asp-validation-for="Desc1"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Desc2">Description-2</label>
                                <input maxlength="25" type="text" class="form-control" asp-for="Desc2">
                                <span class="text-danger my-1" asp-validation-for="Desc2"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Desc3">Description-3</label>
                                <input maxlength="25" type="text" class="form-control" asp-for="Desc3">
                                <span class="text-danger my-1" asp-validation-for="Desc3"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="BlogDetailDesc" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <partial name="_ValidationPartial" />
}


