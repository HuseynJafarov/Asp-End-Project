@model List<BlogDetailDesc>
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-controller="BlogDetailDesc" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Descriptioon-1
                    </th>
                    <th>
                        Descriptioon-2
                    </th>
                    <th>
                        Descriptioon-3
                    </th>
                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var desc in Model)
                    {
                <tr>
                        <td>
                            @desc.Desc1
                        </td>
                        <td>
                            @desc.Desc2
                        </td>
                        <td>
                            @desc.Desc3
                        </td>
                        <td style="text-align: center;">
                            <a asp-action="Details" asp-route-id="@desc.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                            <a asp-action="Edit" asp-route-id="@desc.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                            <form style="display: inline-block;" asp-action="Delete" asp-route-id="@desc.Id" method="post">
                                <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                            </form>
                        </td>
                </tr>
                     }
            </tbody>
        </table>
    </div>
</div>

