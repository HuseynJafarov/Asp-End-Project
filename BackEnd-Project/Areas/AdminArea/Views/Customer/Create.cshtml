@model CustomerVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mx-5 my-3">
    <h3>Customer</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="BlogAuthor">BlogAuthor</label>
                <input class="form-control" asp-for="BlogAuthor">
                <span asp-validation-for="BlogAuthor" class="text-danger my-1"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position">Position</label>
                <input class="form-control" asp-for="Position">
                <span asp-validation-for="Position" class="text-danger my-1"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo">Photo</label>
                <input class="form-control" asp-for="Photo">
                <span asp-validation-for="Photo" class="text-danger my-1"></span>
            </div>
        </div>
        <a class="btn btn-primary" asp-controller="Customer" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

