@model BlogUpdateVM
@{
    ViewData["Title"] = "Edit";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger"></span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Blog
                        </p>
                        <div class="my-3 images">
                            <img src="~/assets/img/blog/@Model.Photo" style="width:250px; height:250px" alt="Alternate Text" />
                        </div>
                        <form asp-controller="Blog" asp-action="Edit" enctype="multipart/form-data" class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input class="form-control" asp-for="Description">
                                <span asp-validation-for="Description" class="text-danger my-1"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image">Image</label>
                                <input class="form-control" asp-for="Image">
                                <span asp-validation-for="Image" class="text-danger my-1"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Blog" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



