@model BlogVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>
                        Image
                    </th>
                    <th>
                        Description
                    </th>
                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model.Blogs)
                {
                <tr>
                    <td>
                        <img src="~/assets/img/blog/@blog.Image" alt="Product" />
                    </td>
                    <td>
                        @Html.Raw(blog.Desc)
                    </td>
                    <td style="text-align: center;">
                        <a asp-action="Details" asp-route-id="@blog.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                        <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                        <form style="display: inline-block;" asp-action="Delete" asp-route-id="@blog.Id" method="post">
                            <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                        </form>
                    </td>
                </tr>

                }


            </tbody>
        </table>
    </div>
</div>


