@model List<Tag>
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-controller="Tag" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <div class="">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width:400px;">
                            TagName
                        </th>
                        <th style="text-align: center; width: 400px;">
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td style="width:400px;">
                                @tag.TagName
                            </td>
                            <td style="text-align: center; width: 400px;">
                                <a asp-action="Details" asp-route-id="@tag.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                                <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                                <form style="display: inline-block;" asp-action="Delete" asp-route-id="@tag.Id" method="post">
                                    <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

