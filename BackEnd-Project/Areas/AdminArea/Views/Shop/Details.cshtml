@model ProductUpdateVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Discount
                    </th>
                    <th>
                        Category
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="~/assets/img/product/@Model.Images.FirstOrDefault(m=> m.IsMain && !m.IsDeleted)?.Image" alt="Product" />
                    </td>
                    <td>
                        @Html.Raw(Model.Name)
                    </td>
                    <td>
                        @Html.Raw(Model.Description)
                    </td>
                    <td>
                        @Html.Raw(Model.Price) $
                    </td>
                    <td>
                        @Html.Raw(Model.Discount) $
                    </td>
                    <td>
                        @Html.Raw(Model.CategoryName)
                    </td>

                </tr>
            </tbody>
        </table>
    </div>
</div>