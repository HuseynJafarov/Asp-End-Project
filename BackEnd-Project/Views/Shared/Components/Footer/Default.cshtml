<!-- offcanvas search form start -->
<div class="offcanvas-search-wrapper">
    <div class="offcanvas-search-inner">
        <div class="offcanvas-close">
            <i class="ion-android-close"></i>
        </div>
        <div class="container">
            <div class="offcanvas-search-box">
                <form class="d-flex bdr-bottom w-100">
                    <input type="text" placeholder="Search entire storage here...">
                    <button class="search-btn"><i class="ion-ios-search-strong"></i>search</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- offcanvas search form end -->
<!-- offcanvas mini cart start -->
<div class="offcanvas-minicart-wrapper">
    <div class="minicart-inner">
        <div class="offcanvas-overlay"></div>
        <div class="minicart-inner-content">
            <div class="minicart-close">
                <i class="ion-android-close"></i>
            </div>
            <div class="minicart-content-box">
                <div class="minicart-item-wrapper">
                    <ul>
                        @foreach (var product in Model.BasketProducts)
                        {
                            <li class="minicart-item">
                                <input style="display:none" value="@product.Id" />
                                <div class="minicart-thumb">
                                    <a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@product.Id">
                                        <img src="~/assets/img/product/@product.Image" alt="product">
                                    </a>
                                </div>
                                <div class="minicart-content">
                                    <h3 class="product-name">
                                        <a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@product.Id">@product.Name</a>
                                    </h3>
                                    <p>
                                        <span class="cart-quantity">1 <strong>&times;</strong></span>
                                        <span class="cart-price">$@((product.Price-((product.Price * 10)/100)).ToString("##.00"))</span>
                                        <span class="cart-price"><del>$@product.Price.ToString("##.00")</del></span>
                                    </p>
                                </div>

                                <form style="display: inline-block;" asp-controller="Basket" asp-action="Delete" asp-route-id="@product.Id" method="post">
                                    <button type="submit" class="minicart-remove"><i class="ion-android-close"></i></button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>

                <div class="minicart-pricing-box">
                    <ul>
                        @foreach (var total in Model.BasketProducts)
                        {
                            endTotal += total.Total - ((total.Total * 10) / 100);

                        }
                        <li class="total">
                            <span>total</span>
                            <span><strong>$@endTotal</strong></span>
                        </li>
                    </ul>
                </div>

                <div class="minicart-button">
                    <a asp-controller="Basket" asp-action="Index"><i class="fa fa-shopping-cart"></i> view cart</a>
                    <a asp-controller="Basket" asp-action="Index"><i class="fa fa-share"></i> checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- offcanvas mini cart end -->
